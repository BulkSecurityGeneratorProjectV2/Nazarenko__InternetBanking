<?xml version='1.0' encoding='UTF-8'?>
<beans:beans xmlns='http://www.springframework.org/schema/security'
	xmlns:beans='http://www.springframework.org/schema/beans' 
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://www.springframework.org/schema/beans 
 
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
 
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.1.xsd'>
	<beans:import resource='classpath:applicationContext.xml' />
	
	<beans:bean id="redirectHandler" class="com.handlers.RedirectHandler ">
		<beans:property name="adminUrl" value="/app/admin" />
		<beans:property name="userUrl" value="/app/client" />
	</beans:bean>

    <http pattern="/"  security="none"></http>
    <http pattern="/app/login*"  security="none"></http>
    <http pattern="/app/resources/**"  security="none"></http>

	<http use-expressions="true">
        <intercept-url pattern="/app/login"  access="permitAll" />
		<intercept-url pattern='/app/client*' access='hasRole("ROLE_USER")' />
		<intercept-url pattern='/app/admin*' access='hasRole("ROLE_ADMIN")' />
        <intercept-url pattern="/app/**" access="isAuthenticated()" />
		<form-login login-page='/app/login'
			authentication-success-handler-ref="redirectHandler"
			authentication-failure-url='/app/login?error=true' />
		<logout logout-success-url='/app/login' />
		<remember-me />
	</http>

	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="md5" />
			<jdbc-user-service data-source-ref='dataSource'
				users-by-username-query="select login as username, password, 
				if (status is null or status = 'ACTIVE', 1, 0) as enabled 
				from users u 
				left join clients c on c.id = u.id 
				where login=?"
				authorities-by-username-query='select login as username, role as authorities from users where 
            login = ?' />
		</authentication-provider>
	</authentication-manager>

</beans:beans>
